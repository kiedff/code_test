<!DOCTYPE html>
<html>
  <head>
    <title>AlienEncounters</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application'%>
    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_API_KEY']}"%>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
  </head>

  <body>
    <%= tag :meta, name: "api-key", content: ENV['GOOGLE_API_KEY'] %>
    <div class=".navbar-nav" id="navbar">
      <div class="logo"><%=image_tag("ufo.png", size: '40x40')%></div>
      <%= link_to "Add photo", new_photo_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %>
      <div class="search">
        <form id="searchForm">
          <input type="text" id="seachTextbox" placeholder="Search Location.." name="search" required>
          <button type="submit" id="placeSearch"><i class="fa fa-search"></i></button>
        </form>
      </div>
    </div>
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notice"><%= flash[:alert] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
