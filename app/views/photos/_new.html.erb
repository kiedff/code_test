<div class="modal-header">
   <h3 id="myModalLabel">Add Photo</h3>
</div>
<div class="modal-body">
  <div>
     <%= form_for @photo do |f| %>

        <table>
          <tbody>
            <tr>
              <td> <label>Latitude</label></td>
              <td><%= f.number_field :lat, step: :any, required: true %></td>
            </tr>
            <tr>
              <td><label>longitude</label></td>
              <td><%= f.number_field :lng, step: :any, required: true %></td>
            </tr>
            <tr>
              <td><label>Photo</label></td>
              <td><%= f.file_field :image, required: true %></td>
            </tr>
          </tbody>
        </table> 
        <br>
        <table>
          <tbody>
            <tr>
              <td><button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Close</button></td>
              <td><%= f.submit "Submit", class: "btn btn-primary"%></td>
            </tr>
          </tbody>
        </table>
     <% end %>
  </div>
</div>


